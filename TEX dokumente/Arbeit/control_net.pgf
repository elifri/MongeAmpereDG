	\node (v_2) at (0,1/\n)[left=4pt] {$\xi_{\bOne 1 0} $};
	\node (v_2) at (1/\n,\bOne/\n)[right=4pt] {$\xi_{0 1 \bOne} $};
	\node[fill=white] (v_2) at (1/\n,1/\n)[below=4pt] {$\xi_{1 1 \bTwo} $};

