\usetikzlibrary{calc}
\begin{tikzpicture}[scale=5]

	\draw (0,0) -- (1,0) -- (0,1) -- cycle;

	\edef \n {3}

	\foreach \x in {0,1,...,\n}
{
	\pgfmathtruncatemacro \m {\n -\x}

			\foreach \y in  {0,...,\m}
			{
